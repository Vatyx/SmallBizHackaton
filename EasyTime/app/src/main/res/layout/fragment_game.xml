<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="November 12th"
            android:id="@+id/dateText"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:id="@+id/buttonContainer"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/headerContainer"
        android:layout_marginTop="32dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/checkInButton"
            android:layout_centerInParent="true"
            android:background="@drawable/button_check_in"
            android:text="@string/game_check_in"
            android:textColor="@drawable/button_text_color"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/checkOutButton"
            android:layout_centerInParent="true"
            android:background="@drawable/button_check_out"
            android:text="@string/game_check_out"
            android:textColor="@drawable/button_text_color"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/durationContainer"
        android:layout_below="@+id/buttonContainer"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeContainer"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:id="@+id/timerHoursText"
                android:textSize="96sp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="#9e9e9e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:id="@+id/timerColonText"
                android:textSize="96sp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/timerHoursText"
                android:layout_toEndOf="@+id/timerHoursText"
                android:layout_centerVertical="true"
                android:textColor="#9e9e9e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:id="@+id/timerMinutesText"
                android:textSize="96sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/timerColonText"
                android:layout_toEndOf="@+id/timerColonText"
                android:singleLine="true"
                android:textColor="#9e9e9e" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_below="@+id/durationContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/feedContainer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_rounded"
        android:backgroundTint="#eee"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ViewAnimator
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/feedAnimator" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="Last checked in at 9:30 AM"
                android:id="@+id/feedText1"
                android:textSize="14sp"
                android:textColor="#424242" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="Last checked out at 12:10 PM"
                android:id="@+id/feedText2"
                android:textSize="14sp"
                android:textColor="#424242" />
        </ViewAnimator>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/errorContainer"
        android:background="#fff"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genericErrorText"
            android:layout_centerInParent="true"
            android:text="@string/generic_error_description"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressContainer"
        android:background="#fff"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chartProgress"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>